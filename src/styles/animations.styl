@import 'constants.styl'

animation-index-delay(delay=0.05s)
  animation-delay 'calc(var(--animation-index, 0) * %s)' % delay

animation-roll-down(start-height=0, duration=2s, padding=0)
  max-height start-height
  padding-top 0
  padding-bottom 0
  opacity 0
  animation animation-roll-down duration ease forwards
  animation-index-delay()

  @keyframes animation-roll-down
    0%
    10%
      opacity 1

    99%
      max-height 3000px
      padding padding
      opacity 1

    100%
      max-height unset
      padding padding
      opacity 1

animation-float(time=0.5s, translateX=0, translateY=-20px)
  opacity 0
  animation float time ease forwards
  animation-index-delay()
  @keyframes float
    from
      opacity 0
      transform translate(translateX, translateY)
    to
      opacity 1
      transform translateY(0, 0)

animation-opacity(time=0.5s)
  opacity 0
  animation opacity time ease forwards
  animation-index-delay()
  @keyframes float
    from
      opacity 0
    to
      opacity 1


hover-effect()
  cursor pointer
  transition all 0.2s ease

  @media ({desktop})
    &:hover
      opacity 0.7

hover-effect-underline(color=white)
  background linear-gradient(color, color) 50% 100% / 0 1px no-repeat
  transition all 0.2s

  @media ({desktop})
    &:hover
      background-size 100% 1px
