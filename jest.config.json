{
  "testMatch": ["**/*.(spec|test).?(m)(js|ts)?(x)"],
  "testEnvironment": "jsdom",
  "reporters": ["default", "jest-html-reporter"],
  "moduleFileExtensions": ["js", "ts", "mjs", "mts"],
  "transform": {
    "^.+\\.m?[t|j]sx?$": "babel-jest"
  },
  "moduleNameMapper": {
    "^~/(.*)": "<rootDir>/src/$1"
  }
}
